{
  "name": "klang-highlighter",
  "displayName": "klang-highlighter",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "contributes": {
    "languages": [{
      "id": "klang",
      "aliases": ["K", "klang"],
      "extensions": [".k"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "klang",
      "scopeName": "main.k",
      "path": "./syntaxes/klang.tmLanguage.json"
    }],
    "snippets": [
      {
        "language": "klang",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "main": "out/extension",
  "devDependencies": {
    "@types/node": "^18.12.1",
    "@types/vscode": "^1.84.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
